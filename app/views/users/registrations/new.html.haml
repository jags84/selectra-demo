.container
  .row
    .col-md-6.col-md-offset-3
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Sign Up
        .panel-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form", 'data-toggle': "validator"}) do |f|
            %fieldset
              = devise_error_messages!
              .form-group
                = f.label :email
                = f.email_field :email, class: 'form-control', autofocus: true,required: true,'data-error': "Please enter an email"
                .help-block.with-errors
              .form-group
                = f.label :password
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
                %br/
                = f.password_field :password, autocomplete: "off", class: 'form-control',required: true,'data-error': "Please enter a password", 'data-minlength': "6"
                .help-block.with-errors
              .form-group
                = f.label :password_confirmation
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',required: true,'data-error': "Please enter your password confirmation",'data-match': "#user_password" , 'data-match-error': "Password doesn't match"
                .help-block.with-errors
              .actions
                = f.submit "Sign Up", class: "btn btn-success btn-block"
              .actions
                = render "users/shared/links"
