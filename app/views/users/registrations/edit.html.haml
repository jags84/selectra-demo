.container
  .row
    .col-md-6.col-md-offset-3
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Edit Information
        .panel-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,role: "form", 'data-toggle': "validator" }) do |f|
            %fieldset
              = devise_error_messages!
              .form-group
                = f.label :email
                = f.email_field :email, class: 'form-control', autofocus: true, required: true,'data-error': "You must enter a valid email"
                .help-block.with-errors
              .form-group
                = f.label :password
                %i (please enter your password to update the information)
                %br
                = f.password_field :current_password, autocomplete: "off", class: 'form-control',required: true, 'data-error': "You must enter your password", 'data-minlength': "6"
                .help-block.with-errors
              .actions
                = f.submit "Update", class: "btn btn-success btn-block"
                = link_to "Back", :back, class: "btn btn-default btn-block"
